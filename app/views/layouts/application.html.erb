<!DOCTYPE html>
<html>
  <head>
    <title>LayoutsAndRenderingPractical</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <script src="https://kit.fontawesome.com/421bc9e4ef.js" crossorigin="anonymous"></script>
    <style>
      .navbar-brand{
        margin: 0 15px;
      }
      .navbar-brand:hover {
        border-radius: 3px;
        transform: scale(1.3);
      }
    </style>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg bg-dark navbar-dark">
      <div class="container-fluid justify-content-start">
        <%= link_to "Products", products_path, class: "navbar-brand" %>
        <%= link_to "Orders", orders_path, class: "navbar-brand" %>
        <%= link_to "Employees", employees_path, class: "navbar-brand" %>
        <%= link_to "Posts", posts_path, class: "navbar-brand" %>
      </div>
      
      <% if user_signed_in? %>
        <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-danger me-4" %>
        <p class="text-info m-auto me-5 fs-5"><%= current_user.role%></p>
      <% else %>
        <%= button_to "Sign_up", new_user_registration_path, method: :get, class: "btn btn-info me-4", style: "font-size: 16px;" %>
        <%= button_to "Login", new_user_session_path, class: "btn btn-primary me-4" %>
      <% end %>
    </nav>

    <% flash.each do |type, msg| %>
      <div class="container d-flex justify-content-center align-items-center w-50 alert <%= flash.alert ? "alert-danger" : "alert-success"%>  my-5">
        <%= msg %>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
