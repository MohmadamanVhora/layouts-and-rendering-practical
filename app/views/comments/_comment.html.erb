<%= turbo_frame_tag comment do %>
  <div class="border border-secondary rounded-1 px-3 py-2 my-3">
    <div>
      <p class="m-0 fs-5"><strong>User:</strong> <%= comment.user.email %></p>
      <p class="m-0 fs-5"><strong>Comment:</strong> <%= comment.comment %></p>
      <p class="m-0 fs-5"><strong>Date:</strong> <%= comment.created_at.to_date %></p>
    </div>

    <div class="d-flex justify-content-between mt-2">
      <div class="text-end">
        <% if user_authenticate(comment) %>
          <%= link_to raw('<i class="fa-solid fa-trash-can"></i>'), post_comment_path(@post, comment), data: { turbo_method: "delete", turbo_confirm: "Are you sure?" }, class: "btn btn-danger rounded-1 me-3" %>
          <%= link_to raw('<i class="fa-solid fa-pen-to-square" style="color: white;"></i>'), edit_post_comment_path(@post, comment), data: { turbo_frame: dom_id(comment) }, class: "btn btn-warning rounded-1" %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
