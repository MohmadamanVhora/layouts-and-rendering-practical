<%= turbo_frame_tag "main_frame" do %>
  <div class="mb-5">
    <h3 class="pt-2 m-0">Title: <%= @post.title %></h3>
    <h3 class="pt-2 m-0">Description: <%= @post.description %></h3>
  </div>
  <hr>

  <div class="d-flex justify-content-between">
    <h3 class="pt-1 m-0">Comments</h3>
    <div>
      <%= link_to raw('<i class="fa-solid fa-comment"></i> Add'), new_post_comment_path(@post), data: { turbo_frame: dom_id(Comment.new) }, class: "btn btn-success rounded-1" %>
      <%= link_to raw('<i class="fa-solid fa-arrow-left-long"></i>'), posts_path, class: "btn btn-danger rounded-1 px-4 ms-2" %>
    </div>
  </div>
  <hr>

  <%= turbo_frame_tag Comment.new %>

  <%= turbo_frame_tag "comments" do %>
    <%= render @comments %>
  <% end %>
<% end %>
