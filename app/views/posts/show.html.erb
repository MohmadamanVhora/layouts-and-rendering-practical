<div class="container mt-5 w-25">
  <h3>Post</h3>
  <div class="border rounded-1 p-3">
    <p class="m-0 fs-5"><strong>Title:</strong> <%= @post.title %></p>
    <p class="m-0 fs-5"><strong>Description:</strong> <%= @post.description %></p>
    <p class="m-0 fs-5"><strong>Date:</strong> <%= @post.created_at %></p>
  </div>
  <div class="mt-3">
    <%= link_to raw('<i class="fa-solid fa-arrow-left-long"></i>'), posts_path, class: "btn btn-danger rounded-1 px-4" %>
  </div>
</div>
