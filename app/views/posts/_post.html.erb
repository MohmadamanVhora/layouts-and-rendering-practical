<%= turbo_frame_tag post do %>
  <div class="border border-secondary rounded-1 px-3 py-2 my-3">
    <div>
      <p class="m-0 fs-4"><strong>Title:</strong> <%= post.title %></p>
      <p class="m-0 fs-6"><strong>Description:</strong> <%= post.description %></p>
      <p class="m-0 fs-6"><strong>Date:</strong> <%= post.created_at %></p>
    </div>

    <div class="text-end mt-2">
      <% if post.user_id == current_user.id %>
        <%= link_to raw('<i class="fa-solid fa-trash-can"></i>'), post_path(post),  method: :delete, class: "btn btn-danger rounded-1 me-3 p" %>
        <%= link_to raw('<i class="fa-solid fa-pen-to-square" style="color: white;"></i>'), edit_post_path(post), class: "btn btn-warning rounded-1" %>
      <% end %>
    </div>
  </div>
<% end %>
