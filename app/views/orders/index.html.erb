<div class="container justify-content-center mt-5 text-center w-50">
  <div style="height:400px; overflow:auto;">
    <% if current_user.present? %>
      <table class="table table-bordered container table-hover table-striped">
        <thead class="table-dark">
          <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: "order", collection: @orders %>
        </tbody>
      </table>
      <%= link_to "Products", products_path, class: "btn btn-info mt-4 px-4" %>
    <% else %>
      <h1>Please Login to Continue</h1>
    <% end %>
  </div>
</div>
