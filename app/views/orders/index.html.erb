<div class="container justify-content-center mt-5 text-center w-50">
  <div style="height:400px; overflow:auto;">
    <% if current_user.present? %>
      <table class="table table-bordered container table-hover table-striped">
        <thead class="table-dark">
          <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.product.title %></td>
              <td><%= order.quantity %></td>
              <td><%= order.order_status %></td>
              <td><%= link_to raw('<i class="fa-solid fa-eye fa-lg" style="color: #12e4f3;"></i>'), product_order_path(order.product_id, order), class: "btn m-0", title: "Show" %>
              <%= link_to raw('<i class="fa-solid fa-pen-to-square fa-lg" style="color: #f4e32a;"></i>'), edit_product_order_path(order.product_id, order), class: "btn", title: "Edit" %>
              <%= link_to raw('<i class="fa-solid fa-trash-can fa-lg" style="color: #f02828;"></i>'), product_order_path(order.product_id, order), class: "btn", title: "Remove", data: { turbo_method: :delete, turbo_confirm: :"Are You Sure?" } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to "Products", products_path, class: "btn btn-info mt-4 px-4" %>
    <% else %>
      <h1>Please Login to Continue</h1>
    <% end %>
  </div>
</div>
