<div class="container justify-content-center my-5 col-5">
  <table class="table table-bordered table-hover table-striped">
    <tbody>
      <tr>
        <th class="col-3">Name</th>
        <td><%= @employee.name %></td>
      </tr>
      <tr>
        <th class="col-3">Email</th>
        <td><%= @employee.email %></td>
      </tr>    
      <tr>
        <th class="col-3">Gender</th>
        <td><%= @employee.gender %></td>
      </tr>
      <tr>
        <th class="col-3">Mobile Number</th>
        <td><%= @employee.mobile_number %></td>
      </tr>
      <tr>
        <th class="col-3">Birth Date</th>
        <td><%= @employee.birth_date %></td>
      </tr>
      <tr>
        <th class="col-3">Document</th>
        <td><%= link_to "View Document", @employee.document_url %></td>
      </tr>
      <tr>
        <th class="col-3">Hobbies</th>
        <td><%= @employee.hobbies.reject(&:empty?).join(', ') %></td>
      </tr>
      <tr>
        <th class="col-3">Address</th>
        <td><%= @employee.addresses.last.house_name %>, <%= @employee.addresses.last.street_name %>, <%= @employee.addresses.last.road %></td>
      </tr>
    </tbody>
  </table>

  <div class="my-4">
    <%= link_to raw('<i class="fa-solid fa-pen-to-square fa-2xl" style="color: #f4e32a;"></i>'), edit_employee_path(@employee), class: "btn", title: "Edit" %>
    <%= link_to raw('<i class="fa-solid fa-trash-can fa-2xl" style="color: #f02828;"></i>'), employee_path(@employee), class: "btn", title: "Remove", data: { turbo_method: :delete, turbo_confirm: :"Are You Sure?" } %>
    <%= link_to raw('<i class="fa-solid fa-list fa-2xl" style="color: #12e4f3;"></i>'), employees_path, :class => 'btn', title: "All" %>
  </div>
</div>
